<script>
    $(document).ready(function () {
        function getData() {
            $.ajax({
                url: "/owner/data/{{owner._id}}",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    const output = convertRawDataToTableData(result.owner);
                    renderTable(output);
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        };

        function convertRawDataToTableData(input) {
            let output = [];
            for (const item of input.carInfos) {
                const row = [item.eTag, item.licenseNum, item.type];
                output.push(row);
            }
            return output;
        }

        function renderTable(data) {
            $('#carInfoTable').DataTable().destroy();
            $('#carInfoTable').DataTable({
                data: data,
                order: [[0, 'desc']],
            });
        }

        getData();

        // To show dialog
        var table = $('#carInfoTable').DataTable();
        $('#carInfoTable').on('click', 'tbody tr', function() {
            const eTag = $(this).children("td:eq(0)").text()
            $.ajax({
                url: "/car-info/" + eTag,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $('#name').val(result.carInfo.owner.name);
                    $('#eTag').val(result.carInfo.eTag);
                    $('#licenseNum').val(result.carInfo.licenseNum);
                    $('#type').val(result.carInfo.type);
                    $('#licenseNum').attr("data-id", result.carInfo._id);
                    $('#carInfoModal').modal("show");
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        })

        // Update Car Information
        function updateCarInfo() {
            const id = $('#licenseNum').attr("data-id");
            const data = {licenseNum: $('#licenseNum').val(), type: $('#type').val()};
            $.ajax({
                url: "/car-info/update/" + id,
                type: "PUT",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                data: JSON.stringify(data),
                headers: {authUsername: auth.username},
                success: function (result) {
                    if (result != 'absent') // Check if car already exists 
                        $('#alertExistedCarModal').modal('show');
                    $('#carInfoModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // Delete Car Information
        function deleteCarInfo() {
            const id = $('#licenseNum').attr("data-id");
            $.ajax({
                url: "/car-info/delete/" + id,
                type: "DELETE",
                contentType: "application/json;charset=utf-8",
                headers: {authUsername: auth.username},
                success: function (result) {
                    if (result.car == 'present') {
                        $('#alertCarInAreaModal').modal('show');
                    }
                    $('#confirmDeleteCarModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }
        
        // Add New Car
        function addNewCar() {
            const data = {eTag: $('#eTagAddNewCarModal').val(), licenseNum: $('#licenseNumAddNewCarModal').val(), type: $('#typeAddNewCarModal').val()};
            $.ajax({
                url: "/car-info/store/{{owner._id}}",
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                data: JSON.stringify(data),
                headers: {authUsername: auth.username},
                success: function (result) {
                    if (result == 'present') // Check if car already exists 
                        $('#alertExistedCarModal').modal('show');
                    $('#addNewCarModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }
        
        // Listen update button click
        $( "#updateBtn" ).on( "click", updateCarInfo);

        // Listen delete button click
        $( "#deleteBtn" ).on( "click", function(){
            $('#carInfoModal').modal('hide');
            $('#confirmDeleteCarModal').modal('show');
        });

        // Listen confirm delete button click
        $( "#confirmDeleteCarModalBtn" ).on( "click", deleteCarInfo);


        // Listen add new car button click
        $( "#addNewCarModalBtn" ).on( "click", addNewCar);
        
        // Disable button 
        if(JSON.parse(localStorage.getItem("auth"))['username'] !== 'admin'){
            $( "#addNewCarModalBtn" ).prop( "disabled", true );
            $( "#confirmDeleteCarModalBtn" ).prop( "disabled", true );
            $( "#deleteBtn" ).prop( "disabled", true );
            $( "#updateBtn" ).prop( "disabled", true );
        }
        
        // log out
        $( "#log-out" ).on( "click", () => {
            localStorage.removeItem("auth");
        })

        if (JSON.parse(localStorage.getItem("auth"))['username'] === 'admin'){
            $( "#username" )[0].innerHTML = 'Administrator'
        }
        else if (JSON.parse(localStorage.getItem("auth"))['username'] === 'tech'){
            $( "#username" )[0].innerHTML = 'Technician'
        }
        else {
            $( "#username" )[0].innerHTML = 'Username'
        }
        
        var socket = io();
        socket.on('newCheckIn', function(signal) {
            if (signal) getData();
        });


    });
</script>