<script>
    $(document).ready(function () {
        function getData() {
            $.ajax({
                url: "/owner/data",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    const output = convertRawDataToTableData(result);
                    renderTable(output);
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        };

        function convertRawDataToTableData(input) {
            let output = [];
            for (const item of input.owners) {
                const row = [item.name, item.personalId];
                output.push(row);
            }
            return output;
        }

        function renderTable(data) {
            $('#ownerTable').DataTable().destroy();
            $('#ownerTable').DataTable({
                data: data,
                order: [[0, 'desc']],
            });
        }

        getData();

        // To show dialog
        var table = $('#ownerTable').DataTable();
        $('#ownerTable').on('click', 'tbody tr', function() {
            const personalId = $(this).children("td:eq(1)").text()
            $.ajax({
                url: "/owner/" + personalId,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $('#name').val(result.owner.name);
                    $('#personalId').val(result.owner.personalId);
                    $('#personalId').attr("data-id", result.owner._id);
                    $('#ownerModal').modal("show");
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        })

        // Update owner
        function updateOwner() {
            const id = $('#personalId').attr("data-id");
            const data = {name: $('#name').val(), personalId: $('#personalId').val()};
            $.ajax({
                url: "/owner/update/" + id,
                type: "PUT",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                data: JSON.stringify(data),
                headers: {authUsername: auth.username},
                success: function (result) {
                    if (result != 'absent') // Check if owner already exists 
                        $('#alertExistedOwnerModal').modal('show');
                    $('#ownerModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // Delete Owner
        function deleteOwner() {
            const id = $('#personalId').attr("data-id");
            $.ajax({
                url: "/owner/delete/" + id,
                type: "DELETE",
                contentType: "application/json;charset=utf-8",
                headers: {authUsername: auth.username},
                success: function (result) {
                    if (result.car == 'present') {
                        $('#alertDeleteCarBeforeDeleteOwnerModal').modal('show');
                    }
                    $('#confirmDeleteOwnerModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // More Information
        function moreInfoOwner() {
            console.log("moreInfoOwner")
            const id = $('#personalId').attr("data-id");
            location.href = "/owner/car/" + id;
        }

        // Add Owner Car
        function addNewOwner() {
            const auth = JSON.parse(localStorage.getItem("auth"));
            const data = {name: $('#nameAddNewOwnerModal').val(), personalId: $('#personalIdAddNewOwnerModal').val()};
            $.ajax({
                url: "/owner/store",
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                headers: {authUsername: auth.username},
                data: JSON.stringify(data),
                success: function (result) {
                    if (result == 'present') // Check if owner already exists 
                        $('#alertExistedOwnerModal').modal('show');
                    $('#addNewOwnerModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // Listen update button click
        $( "#updateBtn" ).on( "click", updateOwner);

        // Listen delete button click
        $( "#deleteBtn" ).on( "click", function(){
            $('#ownerModal').modal('hide');
            $('#confirmDeleteOwnerModal').modal('show');
        });

        // Listen confirm delete button click
        $( "#confirmDeleteOwnerModalBtn" ).on( "click", deleteOwner);

        // Listen more info button click
        $( "#moreInfoBtn" ).on( "click", moreInfoOwner);
        
        // Listen add new car button click
        $( "#addNewOwnerModalBtn" ).on( "click", addNewOwner);

        // Disable button 
        if(JSON.parse(localStorage.getItem("auth"))['username'] !== 'admin'){
            $( "#addNewOwnerModalBtn" ).prop( "disabled", true );
            $( "#confirmDeleteOwnerModalBtn" ).prop( "disabled", true );
            $( "#deleteBtn" ).prop( "disabled", true );
            $( "#updateBtn" ).prop( "disabled", true );
        }

        // log out
        $( "#log-out" ).on( "click", () => {
            localStorage.removeItem("auth");
        })

        if (JSON.parse(localStorage.getItem("auth"))['username'] === 'admin'){
            $( "#username" )[0].innerHTML = 'Administrator'
        }
        else if (JSON.parse(localStorage.getItem("auth"))['username'] === 'tech'){
            $( "#username" )[0].innerHTML = 'Technician'
        }
        else {
            $( "#username" )[0].innerHTML = 'Username'
        }
        
        var socket = io();
        socket.on('newCheckIn', function(signal) {
            if (signal) getData();
        });


    });
</script>