<script>
    $(document).ready(function () {
        function getData() {
            $.ajax({
                url: "/area/data",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    const output = convertRawDataToTableData(result);
                    renderTable(output);
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        };

        function convertRawDataToTableData(input) {
            let output = [];
            for (const item of input.areas) {
                const row = [item.areaCode, item.vacancy, item.totalSlot];
                output.push(row);
            }
            return output;
        }

        function renderTable(data) {
            $('#areaTable').DataTable().destroy();
            $('#areaTable').DataTable({
                data: data,
                order: [[0, 'desc']],
            });
        }

        getData();

        // To show dialog
        var table = $('#areaTable').DataTable();
        $('#areaTable').on('click', 'tbody tr', function() {
            const areaCode = $(this).children("td:eq(0)").text()
            $.ajax({
                url: "/area/" + areaCode,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    $('#areaCodeAreaModal').val(result.area.areaCode);
                    $('#vacancyAreaModal').val(result.area.vacancy);
                    $('#totalSlotAreaModal').val(result.area.totalSlot);
                    $('#areaCodeAreaModal').attr("data-id", result.area._id);
                    $('#areaModal').modal("show");
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        })

        // Update area
        function updateArea() {
            const auth = JSON.parse(localStorage.getItem("auth"));
            const id = $('#areaCodeAreaModal').attr("data-id");
            const data = {areaCode: $('#areaCodeAreaModal').val(), vacancy: $('#vacancyAreaModal').val(), totalSlot: $('#totalSlotAreaModal').val()};
            $.ajax({
                url: "/area/update/" + id,
                type: "PUT",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                headers: {authUsername: auth.username},
                data: JSON.stringify(data),
                success: function (result) {
                    if (result != 'absent') // Check if area already exists 
                        $('#alertExistedAreaModal').modal('show');
                    $('#areaModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // Delete area
        function deleteArea() {
            const auth = JSON.parse(localStorage.getItem("auth"));
            const areaId = $('#areaCodeAreaModal').attr("data-id");
            $.ajax({
                url: "/area/delete/" + areaId,
                type: "DELETE",
                contentType: "application/json;charset=utf-8",
                headers: {authUsername: auth.username},
                success: function (result) {
                    if (result.car == 'present') {
                        $('#alertDeleteCarBeforeDeleteAreaModal').modal('show');
                    }
                    $('#confirmDeleteAreaModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // More Information
        function moreInfoArea() {
            const id = $('#areaCodeAreaModal').attr("data-id");
            location.href = "/area/car/" + id;
        }

        // Add new area
        function addNewArea() {
            const auth = JSON.parse(localStorage.getItem("auth"));
            const data = {areaCode: $('#areaCodeAddNewAreaModal').val(), vacancy: $('#vacancyAddNewAreaModal').val(), totalSlot: $('#totalSlotAddNewAreaModal').val()};
            $.ajax({
                url: "/area/store",
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                headers: {authUsername: auth.username},
                data: JSON.stringify(data),
                success: function (result) {
                    if (result == 'present') // Check if area already exists 
                        $('#alertExistedAreaModal').modal('show');
                    $('#addNewAreaModal').modal('hide');
                    getData();
                }, 
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // Listen update button click
        $( "#updateBtn" ).on( "click", updateArea);

        // Listen delete button click
        $( "#deleteBtn" ).on( "click", function(){
            $('#areaModal').modal('hide');
            $('#confirmDeleteAreaModal').modal('show');
        });

        // Listen confirm delete button click
        $( "#confirmDeleteOwnerModalBtn" ).on( "click", deleteArea);

        // Listen more info button click
        $( "#moreInfoBtn" ).on( "click", moreInfoArea);
        
        // Listen add new car button click
        $( "#addNewAreaModalBtn" ).on( "click", addNewArea);

        // Disable button 
        if(JSON.parse(localStorage.getItem("auth"))['username'] !== 'tech'){
            $( "#updateBtn" ).prop( "disabled", true );
            $( "#deleteBtn" ).prop( "disabled", true );
            $( "#confirmDeleteOwnerModalBtn" ).prop( "disabled", true );
            $( "#addNewAreaModalBtn" ).prop( "disabled", true );
        }

        // log out
        $( "#log-out" ).on( "click", () => {
            localStorage.removeItem("auth");
        })

        if (JSON.parse(localStorage.getItem("auth"))['username'] === 'admin'){
            $( "#username" )[0].innerHTML = 'Administrator'
        }
        else if (JSON.parse(localStorage.getItem("auth"))['username'] === 'tech'){
            $( "#username" )[0].innerHTML = 'Technician'
        }
        else {
            $( "#username" )[0].innerHTML = 'Username'
        }

        var socket = io();
        socket.on('newCheckIn', function(signal) {
            if (signal) getData();
        });


    });
</script>

