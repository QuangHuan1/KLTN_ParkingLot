<script>
    $(document).ready(function () {
        function getData() {
            $.ajax({
                url: "/bill/data",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    const output = convertRawDataToTableData(result);
                    renderTable(output);
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        };

        function convertRawDataToTableData(input) {
            let output = [];
            for (const item of input.bills) {
                parkingTime = (item.parkingTime.days).toString() + " : " + (item.parkingTime.hours).toString()  + " : " + (item.parkingTime.minutes).toString()  + " : " + (item.parkingTime.seconds).toString();
                checkinTime = item.checkinTime.toString().slice(0,-5);
                checkoutTime = item.checkoutTime.toString().slice(0,-5);
                const row = [item.checkInOut ? item.checkInOut._id : "", item.checkInOut ? item.checkInOut.eTag : "", checkinTime, checkoutTime, parkingTime, item.fee]
                output.push(row);
            }
            return output;
        }

        function renderTable(data) {
            $('#billTable').DataTable().destroy();
            $('#billTable').DataTable({
                data: data,
                order: [[0, 'desc']],
            });
        }

        getData();

        // Update Car Information
        function update() {
            const auth = JSON.parse(localStorage.getItem("auth"));
            const data = {registered: $('#registered').val(), notRegistered: $('#notRegistered').val()};
            console.log(data)
            $.ajax({
                url: "/bill/update/",
                type: "PUT",
                contentType: "application/json;charset=utf-8",
                headers: {authUsername: auth.username},
                dataType: "json",
                data: JSON.stringify(data),
                success: function (result) {
                    console.log(result)
                    $('#feeCoefficientModal').modal('hide');
                    getData();
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        }

        // Listen update button click
        $( "#updateBtn" ).on( "click", update);

        // Disable button 
        if(JSON.parse(localStorage.getItem("auth"))['username'] !== 'admin'){
            $( "#updateBtn" ).prop( "disabled", true );
        }
        
        // log out
        $( "#log-out" ).on( "click", () => {
            localStorage.removeItem("auth");
        })

        if (JSON.parse(localStorage.getItem("auth"))['username'] === 'admin'){
            $( "#username" )[0].innerHTML = 'Administrator'
        }
        else if (JSON.parse(localStorage.getItem("auth"))['username'] === 'tech'){
            $( "#username" )[0].innerHTML = 'Technician'
        }
        else {
            $( "#username" )[0].innerHTML = 'Username'
        }

        var socket = io();
        socket.on('newCheckIn', function(signal) {
            if (signal) getData();
        });


    });
</script>