<script>
    $(document).ready(function () {
        function getData() {
            $.ajax({
                url: "/check-in/data",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    const output = convertRawDataToTableData(result);
                    renderTable(output);
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        };

        function convertRawDataToTableData(input) {
            let output = [];
            for (const item of input.checkIns) { 
                const checkinTime = item.checkinTime.toString().slice(0,-5);
                const checkoutTime = item.checkoutTime ? item.checkoutTime.toString().slice(0,-5) : "";
    
                const row = [item._id, item.eTag, item.carInfo?item.carInfo.licenseNum:"", 
                item.gate.gateCode, item.gateOut?item.gateOut.gateCode:"", checkinTime, checkoutTime, item.area.areaCode];
                output.push(row);
            }
            return output;
        }

        function renderTable(data) {
            $('#checkinTable').DataTable().destroy();
            $('#checkinTable').DataTable({
                data: data,
                order: [[0, 'desc']],
            });
        }

        getData();

        // To show dialog
        var table = $('#checkinTable').DataTable();
        $('#checkinTable').on('click', 'tbody tr', function() {
            const checkinCode = $(this).children("td:eq(0)").text()
            $.ajax({
                url: "/check-in/" + checkinCode,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.checkIn.checkoutTime) {
                        var parkingTime = Math.abs(new Date(result.checkIn.checkoutTime) - new Date(result.checkIn.checkinTime))
                        var days = Math.floor(parkingTime/1000/60/60/24);
                        var hours = Math.floor(parkingTime/1000/60/60) - days*24;
                        var minutes = Math.floor(parkingTime/1000/60) - hours*60 - days*24*60;
                        var seconds = Math.floor(parkingTime/1000) - minutes*60 - hours*60*60 - days*24*60*60;
                    }      
                    else {
                        var days = NaN;
                        var hours = NaN;
                        var minutes = NaN;
                        var seconds = NaN;
                    } 

                    const checkinTime = result.checkIn.checkinTime.toString().slice(0,-5);
                    const checkoutTime = result.checkIn.checkoutTime ? result.checkIn.checkoutTime.toString().slice(0,-5) : "";
                    
                    $('#parkingTimeCheckinModal').val(days + " : " + hours + " : " + minutes + " : " + seconds);
                    $('#eTagCheckinModal').val(result.checkIn.eTag);
                    $('#licenseNumCheckinModal').val(result.checkIn.carInfo.licenseNum);
                    $('#gateCodeCheckinModal').val(result.checkIn.gate.gateCode);
                    $('#checkinTimeCheckinModal').val(checkinTime);
                    $('#areaCodeCheckinModal').val(result.checkIn.area.areaCode);
                    $('#checkinImage').attr('src', '/img/checkin/' + result.checkIn.imageCode + '.jpg');
                    $('#gateCodeOutCheckinModal').val(result.checkIn.gateOut ? result.checkIn.gateOut.gateCode: '');
                    $('#checkoutTimeCheckinModal').val(checkoutTime);
                    $('#checkoutImage').attr('src', '/img/checkout/' + result.checkIn.imageCodeOut + '.jpg');
                    $('#carInfoModal').modal("show");
                },
                error: function (errormessage) {
                    console.log(errormessage.responseText);
                },
                complete: function() {
                }
            });
        })
       
        var socket = io();
        socket.on('newCheckIn', function(signal) {
            if (signal) getData();
        });

        // log out
        $( "#log-out" ).on( "click", () => {
            localStorage.removeItem("auth");
        })

        if (JSON.parse(localStorage.getItem("auth"))['username'] === 'admin'){
            $( "#username" )[0].innerHTML = 'Administrator'
        }
        else if (JSON.parse(localStorage.getItem("auth"))['username'] === 'tech'){
            $( "#username" )[0].innerHTML = 'Technician'
        }
        else {
            $( "#username" )[0].innerHTML = 'Username'
        }

        socket.on('newCheckout', function(signal) {
            if (signal) getData();
        });

        socket.on('alarm', function(signal) {
            $('#messageAlarmModal')[0].innerHTML = signal.message;
            $('#alarmModal').modal("show");
            if (signal) getData();
        });


    });
</script>
